{
  "short_name": "Canvas Files",
  "name": "Canvas Files",
  "description": "Download all your files from Canvas",
  "version": "0.0.1",
  "manifest_version": 2,

  "permissions": ["declarativeContent", "activeTab", "storage", "downloads"],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://canvas.umn.edu/"],
      "js": ["content.js"],
      "css": []
    }
  ],

  "browser_action": {}
}
